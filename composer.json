{
    "name": "oxcom/symfony-rollbar-bundle",
    "description": "Bundle for Symfony 3 that integrates Rollbar tracker",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "OxCom",
            "email": "lancer.oxcom@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": { "SymfonyRollbarBundle\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Tests\\": "tests/"}
    },
    "require": {
        "php": ">=5.6",
        "monolog/monolog": "^1.23",
        "rollbar/rollbar": "^1.3",
        "symfony/dependency-injection": "^3.4",
        "symfony/config": "^3.3",
        "symfony/http-kernel": "^3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "doctrine/doctrine-fixtures-bundle": "^2.4",
        "squizlabs/php_codesniffer": "^2.9",
        "matthiasnoback/symfony-dependency-injection-test": "^1.2",
        "symfony/phpunit-bridge": "3.3.*",
        "symfony/config": "3.3.*",
        "symfony/http-kernel": "3.3.*"
    },
    "scripts": {
        "test": [
            "composer install",
            "./vendor/bin/phpcs --standard=psr2 src/ tests/SymfonyRollbarBundle",
            "./vendor/bin/phpunit -c tests/"
        ]
    }
}
